#include <stdio.h>

/*
  Rotate an Array using Reversal Algorithm
  Time Complexity: O(n)
  Space Complexity: O(1)
*/

// Function to reverse a part of the array
void reverse(int arr[], int start, int end) {
    while (start < end) {
        int temp = arr[start];
        arr[start] = arr[end];
        arr[end] = temp;
        start++;
        end--;
    }
}

// Left rotation by k positions
void leftRotate(int arr[], int n, int k) {
    k = k % n;
    reverse(arr, 0, k - 1);
    reverse(arr, k, n - 1);
    reverse(arr, 0, n - 1);
}

// Right rotation by k positions
void rightRotate(int arr[], int n, int k) {
    k = k % n;
    reverse(arr, 0, n - 1);
    reverse(arr, 0, k - 1);
    reverse(arr, k, n - 1);
}

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int n = sizeof(arr) / sizeof(arr[0]);
    int k = 2;

    leftRotate(arr, n, k);
    printf("Left Rotated Array: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);

    printf("\n");

    int arr2[] = {1, 2, 3, 4, 5};
    rightRotate(arr2, n, k);
    printf("Right Rotated Array: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr2[i]);

    return 0;
}
