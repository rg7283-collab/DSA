#include <stdio.h>

/*
  Find Maximum and Minimum in an Array
  Approach: Single Traversal
  Time Complexity: O(n)
  Space Complexity: O(1)
*/

void findMinMax(int arr[], int n) {
    int min = arr[0];
    int max = arr[0];

    for (int i = 1; i < n; i++) {
        if (arr[i] < min)
            min = arr[i];
        if (arr[i] > max)
            max = arr[i];
    }

    printf("Minimum element: %d\n", min);
    printf("Maximum element: %d\n", max);
}

int main() {
    int arr[] = {4, 7, 1, 9, 2};
    int n = sizeof(arr) / sizeof(arr[0]);

    findMinMax(arr, n);

    return 0;
}
