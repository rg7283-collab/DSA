#include <stdio.h>

/*
  Factorial of a Number Using Recursion
  Time Complexity: O(n)
  Space Complexity: O(n)
*/

int factorial(int n) {
    if (n == 0 || n == 1)
        return 1;

    return n * factorial(n - 1);
}

int main() {
    int n = 5;

    printf("Factorial of %d is %d\n", n, factorial(n));

    return 0;
}
