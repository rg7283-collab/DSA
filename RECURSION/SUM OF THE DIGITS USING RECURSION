#include <stdio.h>

/*
  Sum of Digits Using Recursion
  Time Complexity: O(d)
  Space Complexity: O(d)
*/

int sumOfDigits(int n) {
    if (n == 0)
        return 0;

    return (n % 10) + sumOfDigits(n / 10);
}

int main() {
    int n = 1234;

    printf("Sum of digits of %d is %d\n", n, sumOfDigits(n));

    return 0;
}
