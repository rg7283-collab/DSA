#include <stdio.h>

/*
  Power of a Number Using Recursion
  Time Complexity: O(n)
  Space Complexity: O(n)
*/

int power(int x, int n) {
    if (n == 0)
        return 1;

    return x * power(x, n - 1);
}

int main() {
    int x = 2;
    int n = 5;

    printf("%d^%d = %d\n", x, n, power(x, n));

    return 0;
}
